<p id="notice"><%= notice %></p>

<h1>Products</h1>

<table>
  <thead>
    <tr>
      <th>P</th>
      <th>Name</th>
      <th>Price</th>
      <th>Company</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>

    <% @products.each do |product| %>
      <tr>
        <td><%= product.p_id %></td>
        <td><%= product.name %></td>
        <td><%= product.price %></td>
        <td><%= product.company %></td>
        <td><%= link_to 'Show', product_path(product) %></td>
        <td><%= link_to 'Edit', product_edit_path(product) %></td>
        <td><%= link_to 'Destroy', product_destroy_path(product), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Product', products_new_path %>
